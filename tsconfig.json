{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM","ESNext"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",

    "moduleResolution": "Bundler",
    "types": ["vite/client"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    
    "allowSyntheticDefaultImports": true,
  },
  "references": [
    { "path": "./tsconfig.node.json" }
  ],
  "include": ["src"],
}
